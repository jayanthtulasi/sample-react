FROM node:25.2-slim AS build
ADD . /node
WORKDIR /node
RUN npm install && \
    npm run build

FROM nginx:1.29.3-alpine AS runtime
COPY --from=build /node/build  /usr/share/nginx/html
EXPOSE 80
LABEL author ="teamdevops"
LABEL env="dev"

